</head>
<body class="fixed-top">


    <div class="row">
        <div class="span12">
            <div class="widget box light-grey">
                <div class="widget-title">
                    <div class="widget-title">
                        <h4><i class="fa fa-file-text" aria-hidden="true" style="margin-left:20px;"></i>菜单管理</h4>
                        <div class="actions">
                            <a class="btn btn-primary" href="javascript:void(0)" onclick="location.href='MenuEdit'"><i class="icon-pencil"></i>&nbsp;新增</a>
                            <a class="btn btn-danger" href="javascript:void(0)" onclick="Menu.BatchDel()"><i class="icon-trash"></i>&nbsp;删除</a>
                            <a class="btn btn-info" href="MenuList"><i class="icon-left"></i>&nbsp;返回</a>
                        </div>
                    </div>
                    <div class="widget-body" style="margin-left:30px;">


                        <table class="table table-hover table-bordered table-striped" id="tabInfo">
                            <thead>
                                <tr class="widget-title">
                                    <th style="width: 8px;"><input type="checkbox" class="group-checkable" onclick="Menu.SelectAll(this)" /></th>
                                    <th class="hidden-480">菜单编号</th>
                                    <th class="hidden-480">菜单名称</th>
                                    <th class="hidden-480">上级菜单</th>
                                    <th class="hidden-480">地址</th>
                                    <th>操作</th>
                                </tr>
                            </thead>

                            <tbody>

                                @foreach (var item in ViewBag.menu)
                                {

                                    <tr class="@(i % 2 == 0 ? "" : "addcolor") ">
                                        <td ><input name="user_item" class="checkboxes" data="@item.fid" value="@item.fid" type="checkbox"></td>
                                        <td>@item.gnbm</td>
                                        <td>@item.gnmc</td>
                                        <td>@item.sjgnbm</td>
                                        <td>@item.acturl</td>
                                        
                                        <td>
                                            <a class="icon-edit" href="MenuEdit?fid=@item.fid" title="编辑"><i class="fa fa-pencil" aria-hidden="true"></i></a>&nbsp;&nbsp;
                                            <a class="icon-remove" href="javascript:void(0)" onclick="Menu.Delete('@item.fid')" title="删除"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                                            &nbsp;&nbsp;&nbsp;&nbsp;<a href="MenuXjList?gnbm=@item.gnbm" title="下级菜单管理"><i class="fa fa-cogs" aria-hidden="true"></i></a>
                                        </td>
                                    </tr>

                                    i++;
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>

    @Html.Partial("_Foot")

